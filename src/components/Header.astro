<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: sticky;
		top: 0;
		z-index: 100;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		padding: 1rem 0;
	}

	nav img {
		height: 60px;
		width: auto;
		margin: 0;
		border-radius: 0;
	}

	.internal-links {
		display: flex;
		align-items: center;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.internal-links a {
		padding: 0.5rem 1rem;
		color: rgb(var(--black));
		border-bottom: 3px solid transparent;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.2s ease;
		border-radius: 6px;
	}

	.internal-links a:hover {
		background-color: rgba(var(--accent), 0.1);
		color: var(--accent);
	}

	.internal-links a.active {
		border-bottom-color: var(--accent);
		color: var(--accent);
		font-weight: 600;
	}

	.social-links {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.social-btn {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background: white;
		border: 1px solid rgb(var(--gray-light));
		color: rgb(var(--gray-dark));
		text-decoration: none;
		transition: all 0.2s ease;
	}

	.social-btn:hover {
		background: var(--accent);
		color: white;
		border-color: var(--accent);
		transform: translateY(-2px);
	}

	/* Responsive */
	@media (max-width: 768px) {
		nav {
			flex-direction: column;
			gap: 1rem;
			padding: 0.5rem 0;
		}
		
		.internal-links {
			justify-content: center;
			gap: 0.5rem;
		}
		
		.internal-links a {
			padding: 0.25rem 0.5rem;
			font-size: 0.9rem;
		}
		
		.social-links {
			gap: 0.5rem;
		}

		.social-btn {
			width: 36px;
			height: 36px;
		}

		.social-btn svg {
			width: 18px;
			height: 18px;
		}
	}

	@media (max-width: 480px) {
		.internal-links {
			flex-direction: column;
			gap: 0.25rem;
		}
		
		.internal-links a {
			text-align: center;
			width: 100%;
		}
	}
</style>
