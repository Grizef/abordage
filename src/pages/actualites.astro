  // Fonction pour ouvrir la modal avec l'article complet
  function ouvrirModal(id) {
    const actualite = actualitesCompletes[id];
    if (!actualite) return;

    const modal = document.getElementById('modal');
    const modalBody = document.getElementById('modal-body');
    
    modalBody.innerHTML = `
      <div class="modal-actualite">
        <img src="${actualite.image}" alt="${actualite.titre}">
        <h2>${actualite.titre}</h2>
        <p class="modal-date">${actualite.date}</p>
        <div>${actualite.contenu}</div>
      </div>
    `;
    
    modal.style.display = 'block';
    document.body.style.overflow = 'hidden'; // Empêcher le scroll de la page
  }

  // Fonction pour fermer la modal
  function fermerModal() {
    const modal = document.getElementById('modal');
    modal.style.display = 'none';
    document.body.style.overflow = 'auto'; // Réactiver le scroll de la page
  }

  // Initialisation des événements
  document.addEventListener('DOMContentLoaded', () => {
    // Ajouter les événements aux boutons "Lire la suite"
    document.querySelectorAll('.btn-lire-plus').forEach(button => {
      button.addEventListener('click', (e) => {
        const actualiteId = parseInt(e.target.getAttribute('data-actualite-id'));
        ouvrirModal(actualiteId);
      });
    });

    // Fermer la modal avec le bouton X
    document.querySelector('.modal-close').addEventListener('click', fermerModal);

    // Fermer la modal en cliquant à l'extérieur
    document.getElementById('modal').addEventListener('click', (event) => {
      if (event.target.id === 'modal') {
        fermerModal();
      }
    });

    // Fermer la modal avec la touche Échap
    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape') {
        fermerModal();
      }
    });
  });
</script> 